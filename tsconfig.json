{
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "preserve",
        "target": "ESNext",
        "allowJs": true,
        "moduleResolution": "node",
        "plugins": [
            {
                "name": "@styled/typescript-styled-plugin"
            }
        ],
        "baseUrl": "./",
        "paths": {
            "App": ["src/App/index.js"],
            "App/*": ["src/App/*"],

            "Doc": ["src/Doc/index.js"],
            "Doc/*": ["src/Doc/*"],

            "Client/*": ["src/client/*"],
            "Support/*": ["src/support/*"],
            "Extern/*": ["src/extern/*"],
        }
    }
}
